<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/test_reg_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp">
        <TextView
            android:id="@+id/test_reg_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名： "
            android:textSize="16sp"
            android:textColor="@color/colorBlack"/>
        <EditText
            android:id="@+id/test_reg_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/test_reg_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/test_reg_ll1"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        >
        <TextView
            android:id="@+id/test_reg_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码：   "
            android:textSize="16sp"
            android:textColor="@color/colorBlack"/>
        <EditText
            android:id="@+id/test_reg_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/test_reg_ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/test_reg_ll2"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp">
        <TextView
            android:id="@+id/test_reg_sure_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码："
            android:textSize="16sp"
            android:textColor="@color/colorBlack"/>
        <EditText
            android:id="@+id/test_reg_sure_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/test_reg_ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/test_reg_ll3"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp">
        <TextView
            android:id="@+id/test_reg_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话：    "
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:inputType="phone"/>
        <EditText
            android:id="@+id/test_reg_phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>